<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.senthilkumar.tictactoeapp.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="@color/black_overlay"
    android:orientation="vertical">



        android:id="@+id/fullscreen_content_controls"
        style="?metaButtonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:background="@color/black_overlay"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/moveTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:gravity="center_horizontal"
            android:text="@string/x_move"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center_vertical|center_horizontal" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="32dp"
                    android:gravity="center"
                    android:onClick="@string/makeMove"
                    android:text="@string/empty"
                    />

                <Button
                    android:id="@+id/button2"
                    android:gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:onClick="@string/makeMove"
                    android:text="@string/empty"/>

                <Button
                    android:id="@+id/button3"
                    android:layout_width="100dp"
                    android:gravity="center"
                    android:layout_height="100dp"
                    android:onClick="@string/makeMove"
                    android:text="@string/empty" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/button4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:onClick="@string/makeMove"
                    android:layout_marginLeft="32dp"
                    android:text="@string/empty"/>

                <Button
                    android:id="@+id/button5"
                    android:gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:onClick="@string/makeMove"
                    android:text="@string/empty"/>
                <Button
                    android:id="@+id/button6"
                    android:layout_width="100dp"
                    android:gravity="center"
                    android:layout_height="100dp"
                    android:onClick="@string/makeMove"
                    android:text="@string/empty"/>
            </TableRow>
            <TableRow
                android:id="@+id/tableRow3">
                <Button
                    android:id="@+id/button7"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:onClick="@string/makeMove"
                    android:layout_marginLeft="32dp"
                    android:text="@string/empty" />
                <Button
                    android:id="@+id/button8"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:onClick="@string/makeMove"
                    android:text="@string/empty" />
                <Button
                    android:id="@+id/button9"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:onClick="@string/makeMove"
                    android:text="@string/empty"/>
            </TableRow>
        </TableLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset_message"
        android:id="@+id/resetButton"
        android:layout_gravity="center_horizontal"
        android:onClick="ResetGame"
        android:layout_below="@+id/fullscreen_content_controls"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

</LinearLayout>




